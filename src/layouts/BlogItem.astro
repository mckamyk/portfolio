---
export interface Props {
	title: string;
}
const { title } = Astro.props;
import Layout from "./Layout.astro";
---

<Layout title={title}>
	<div class="sticky flex flex-col justify-center items-center h-20">
		<h1 class="text-4xl font-bold">{title}</h1>
	</div>
	<div class="sticky w-full flex justify-center mb-4">
		<div class="flex w-3/4">
			<div class="h-1 bg-gradient-to-r from-transparent to-sky-800 grow"></div>
			<div class="h-1 bg-gradient-to-r from-sky-800 to-transparent grow"></div>
		</div>
	</div>

	<div class="flex justify-center">
		<div class="max-w-3xl grow">
			<slot />
		</div>
	</div>
</Layout>
